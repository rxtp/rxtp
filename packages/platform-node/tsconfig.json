{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "target": "ES6",
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@rxtp/core": ["../core/src"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "tmp", "../core/*"],
}
